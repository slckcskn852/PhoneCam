<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Camera preview fills entire screen as background -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Dark overlay for screen dimming - pure AMOLED black -->
    <View
        android:id="@+id/darkOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- Transparent control overlay -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#33000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signaling URL"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <EditText
            android:id="@+id/signalingUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/default_signaling_url"
            android:inputType="textUri"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:background="#55000000"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:background="#88000000"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Idle"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="#88000000"
            android:padding="12dp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />
    </LinearLayout>

</FrameLayout>
